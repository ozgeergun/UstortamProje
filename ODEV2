<!DOCTYPE html>
<html>
<head>
<script>
function validateForm() {  
  var kontrol = true;
  var bos_olmamali = document.querySelector("#name").value;
  if (bos_olmamali == "") {
     document.getElementById('error1').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
     kontrol =false;
  }
  else{
    document.getElementById('error1').innerHTML = '';
  }
  
  var mail = document.querySelector("#email").value;
  var email_kontrol =/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
  if (mail == "" || !email_kontrol.test(mail)) {
     document.getElementById('error2').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
     kontrol =false;
  }
  else{
    document.getElementById('error2').innerHTML = '';
  }
  
  var sayi = document.querySelector("#sayisal").value;
  if (sayi == "" || isNaN(sayi)) {
     document.getElementById('error3').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
     kontrol =false;
  }
  else{
    document.getElementById('error3').innerHTML = '';
  }
  
  var sayisal = document.querySelector("#basamakli").value;
  if (sayisal == "" || sayisal.length < 12 || isNaN(sayi)) {
     document.getElementById('error4').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
     kontrol =false;
  }
  else{
    document.getElementById('error4').innerHTML = '';
  }
  
  var alfa = document.querySelector("#alfa").value;
  var harf_kontrol = /^[a-zA-Z]+$/;
  if ( alfa == "" || !harf_kontrol.test(alfa)) {
     document.getElementById('error5').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
     kontrol =false;
  }
  else{
    document.getElementById('error5').innerHTML = '';
  }

  var max30 = document.querySelector("#max30").value;
  if ( max30 == "" || !harf_kontrol.test(max30) || max30.length>30) {
     document.getElementById('error6').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
     kontrol =false;
  }
  else{
    document.getElementById('error6').innerHTML = '';
  }
  
  var uckelime = document.querySelector("#uckelime").value;
  if (uckelime.split(" ").length!= 3) {
     document.getElementById('error7').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
     kontrol =false;
  }
  else{
    document.getElementById('error7').innerHTML = '';
  }
  while (1) {
      var sifre = document.querySelector("#password").value;
      if(sifre.length<8){
        document.getElementById('error8').innerHTML="<span style='color:red'> hatalı giriş yaptınız </span>";
        kontrol=false;
        break;
      }
      var upperCase = false;
      var lowerCase = false;
      var digit = false;
      var punctuation = false;
         for(var i =0; i < sifre.length; i++){ 
            if(64<sifre.charCodeAt(i) && sifre.charCodeAt(i)<91){ 
              upperCase=true;
            }
            else if(96<sifre.charCodeAt(i) &&  sifre.charCodeAt(i)<123){ 
              lowerCase=true;
            }
            else if(47<sifre.charCodeAt(i) && sifre.charCodeAt(i)<58){ 
              digit=true; 
            }
            else{ 
              punctuation=true;
            }
         } 
      if (upperCase==false || lowerCase==false || digit==false || punctuation==false ) {
          document.getElementById("hata_password").textContent = "sifreniz gerekli kosullari saglamali!";
          kontrol=false;
          break;
      }
      document.getElementById('error8').innerHTML = "";
      break;
    }
    
    if (kontrol==false){
      return false;
    }     
}
</script>
</head>
<body>
<style>
body{
  background-color: #d6b4e7;
  font-family:sherif;
  color: #330033;
}
#error1,#error2,#error3,#error4,#error5,#error6,#error7,#error8{
  width:30%;
}
</style>
<form name="myForm" action="/action_page.php" onsubmit="return validateForm()" method="post">
